{
 
    key_t var_key_str; 
    /*******************/
    switch(get_key_index(var_key_str))
   {
         case mode_key:
             /* do something*/
             break;
         case left_key:
       etcâ€¦
       break;
 
     default:
 
       break;
  }

 
}
 
